@model PortalInmobiliario.Models.Inmueble
@using PortalInmobiliario.Models

@{
    ViewData["Title"] = "Crear inmueble";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CrearInmueble" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row g-3">
        <div class="col-md-3">
            <label asp-for="Codigo" class="form-label"></label>
            <input asp-for="Codigo" class="form-control" />
            <span asp-validation-for="Codigo" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Titulo" class="form-label"></label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Imagen" class="form-label"></label>
            <input asp-for="Imagen" class="form-control" />
            <span asp-validation-for="Imagen" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="Tipo" class="form-label"></label>
            <select asp-for="Tipo" class="form-select"
                    asp-items="Html.GetEnumSelectList<TipoInmueble>()"></select>
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Ciudad" class="form-label"></label>
            <input asp-for="Ciudad" class="form-control" />
            <span asp-validation-for="Ciudad" class="text-danger"></span>
        </div>

        <div class="col-md-8">
            <label asp-for="Direccion" class="form-label"></label>
            <input asp-for="Direccion" class="form-control" />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <label asp-for="Dormitorios" class="form-label"></label>
            <input asp-for="Dormitorios" class="form-control" />
            <span asp-validation-for="Dormitorios" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <label asp-for="Banos" class="form-label"></label>
            <input asp-for="Banos" class="form-control" />
            <span asp-validation-for="Banos" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="MetrosCuadrados" class="form-label"></label>
            <input asp-for="MetrosCuadrados" class="form-control" />
            <span asp-validation-for="MetrosCuadrados" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="Precio" class="form-label"></label>
            <input asp-for="Precio" class="form-control" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>

        <div class="col-md-2 form-check mt-4">
            <input asp-for="Activo" class="form-check-input" />
            <label asp-for="Activo" class="form-check-label"></label>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Guardar</button>
        <a asp-controller="Inmuebles" asp-action="Catalogo" class="btn btn-outline-secondary">Cancelar</a>
    </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }